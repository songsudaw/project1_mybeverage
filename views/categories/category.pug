html
  head
    title My Beverage
    link(
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css'
    )
    link(
      rel='stylesheet'
      href='/stylesheets/layout.css'
    )
  body
    main.container.is-fluid
      .section
        form(action="/categories/new", method="GET")
          .field
            .control
              button.button.is-link.is-fullwidth New Category   
      - if (categoriesList && categoriesList.length > 0)
        - for (let i = 0; i < categoriesList.length; i += 1)
            .card.box
              a.delete(href=`/categories/${categoriesList[i].name}?_method=delete`)
              a(href='/drinks')
                .card-content
                  .media
                    .media-content
                      p.title.is-4 
                      = `${categoriesList[i].name}`
      - if(error)
        .field
          .control
            p= error      
